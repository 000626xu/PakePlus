{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "PakePlus",
    "version": "0.1.0",
    "identifier": "com.pakeplus.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "PakePlus",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": {
                    "allow": [
                        "$APPDATA/assets/**",
                        "$APPDATA/**",
                        "$DOWNLOAD/*"
                    ]
                }
            },
            "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost blob: data: http://asset.localhost; font-src 'self' asset: http//localhost data:;"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "resources": [
            "./data/*",
            "./data/config.json",
            "./data/main.rs",
            "./data/Cargo.toml",
            "./data/custom.js"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
