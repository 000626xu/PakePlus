{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "beforeBundleCommand": "pnpm tauri icon",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "PROJECTNAME",
        "version": "PROJECTVERSION"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "all": true,
                "readFile": true,
                "writeFile": true,
                "scope": ["$APPCONFIG/*"]
            },
            "window": {
                "all": true,
                "create": true,
                "center": true,
                "setResizable": true
            }
        },
        "windows": [
            {
                "title": "PROJECTNAME",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "PROJECTID",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
